{
  "packageRules": [
    {
      "matchPackageNames": [
        "numpy",
        "scipy",
        "matplotlib",
        "pandas",
        "scikit-image",
        "networkx",
        "scikit-learn",
        "xarray",
        "ipython",
        "zarr"
      ],
      "matchDepTypes": ["dependencies"],
      "minimumReleaseAge": "2 years",
      "rangeStrategy": "bump",
      "separateMultipleMinor": true,
      "separateMultipleMajor": true,
      "branchTopic": "{{{depNameSanitized}}}-{{{newMajor}}}.{{{newMinor}}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}"
    }
  ]
}
